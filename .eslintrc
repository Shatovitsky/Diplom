{
  "env": {
    "browser": true,
    "es2021": true
  },

  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
    "no-shadow": "off",
    "no-return-assign": "off",
    "default-param-last": "off",
    "no-param-reassign": [2, { "props": false }],
    "no-unused-vars": "off",
    "prettier/prettier": 2,
    "import/order": [
      2,
      {
        "groups": [
          "external",
          "builtin",
          "index",
          "sibling",
          "parent",
          "internal",
          "type"
        ],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "newlines-between": "always-and-inside-groups"
      }
    ]
  }
}
